@model CountryListViewModel
@{
    ViewData["Title"] = "Countries in the Olympics";
}

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Olympic Game</h3>
        <div class="list-group">
            @foreach (Game game in Model.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameId"
                   asp-route-activeSport="@Model.ActiveSport"
                   class="list-group-item @Model.CheckActiveGame(game.GameId)">

                    @game.Name
                </a>
            }
        </div>

        <h3 class="mt-3">Types</h3>
        <div class="list-group">
            @foreach (Sport type in Model.Sports)
            {
                <a asp-action="Index"
                   asp-action-activeGame="@Model.ActiveGame"
                   asp-route-activeSport="@type.SportId"
                   class="list-group-item @Model.CheckActiveSport(type.SportId)">

                    @type.Name
                </a>
            }
        </div>
    </div>

    <div class="col-sm-9">
        <ul class="list-inline">
                @foreach (Country country in Model.Countries)
                {
                <li class="list-inline-item">
                    <form asp-action="Details" method="post">
                        <button class="bg-white border-0" type="submit">
                            <img src="~/Flags/@country.LogoImage" alt="@country.Name" title="@country.Name | @country.Game.Name @country.Sport.Name" style="width: 200px; height: 150px;padding: 0.5em; border:solid 0.5px green;" />
                        </button>

                        <input type="hidden" asp-for="@country.CountryId" />
                        <input type="hidden" asp-for="ActiveGame" />
                        <input type="hidden" asp-for="ActiveSport" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>

