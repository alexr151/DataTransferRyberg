@model CountryViewModel

@{ 
    ViewData["Title"] = "Country Details";
}

<h2>Country Details</h2>

<div class="row">
    <div class="col-sm-9 col-sm-offset-3">
        <ul class="list-group text-center">
            <li class="list-group-item">
                <img src="~/Flags/@Model.Country.LogoImage" alt="" style="width: 200px; height: 150px;padding: 0.5em; border:solid 0.5px;" />
                <h3>@Model.Country.Name</h3>
            </li>
            <li class="list-group-item">
                <h4>Olympic Game: @Model.Country.Game.Name</h4>
            </li>
            <li class="list-group-item">
                <h4>Sport: @Model.Country.Sport.Name</h4>
            </li>
            <li class="list-group-item">
                <a asp-action="Index"
                   asp-route-game="@Model.ActiveGame"
                   asp-route-sport="@Model.ActiveSport">

                    Return to Home Page
                </a>
            </li>
        </ul>
    </div>
</div>